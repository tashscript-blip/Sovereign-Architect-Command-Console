    <!-- SCRIPTS -->
    <script>
        // --- DATA OBJECTS ---
        
        const layerData = {
            core: {
                title: "1. Sovereign Core",
                subtitle: "The Origin Point",
                desc: "This is YOU, the human. The goal is to protect the Architect's vision and decision authority. You are not the brand. You are the source.",
                agent: "Defense/Control Agent"
            },
            throne: {
                title: "2. The Throne",
                subtitle: "The Holding Structure",
                desc: "Legal entities (LLCs/Trusts) that own the assets. Ensures all IP is owned by a private entity, never the person. Separates liability from identity.",
                agent: "Legal/Admin Systems"
            },
            vault: {
                title: "3. The Vault (Engine A)",
                subtitle: "Creative Generator",
                desc: "Where raw ideas, art, and content are born. Pure expression with zero pressure to monetize. Assets here are 'potential' energy.",
                agent: "Idea Organizer (AI Agent 1)"
            },
            machines: {
                title: "4. Money Machines (Engine B)",
                subtitle: "Financial Converter",
                desc: "Modular, scalable, and killable operating entities. They take assets from the Vault and turn them into cash flow via automation.",
                agent: "Revenue Engine (AI Agent 3)"
            },
            defense: {
                title: "5. Defense Systems",
                subtitle: "Risk Monitor",
                desc: "Monitors for legal, financial, and burnout risks. Flags high 'mental load'. Ensures the system serves the life, not vice versa.",
                agent: "Defense/Control Agent"
            }
        };

        // --- INTERACTIVITY FUNCTIONS ---

        function showLayer(layerKey) {
            // Update Text
            const data = layerData[layerKey];
            document.getElementById('detail-title').innerText = data.title;
            document.getElementById('detail-subtitle').innerText = data.subtitle;
            document.getElementById('detail-desc').innerText = data.desc;
            document.getElementById('detail-agent').innerText = data.agent;

            // Highlight active button (reset others)
            // Ideally add/remove classes via JS loops, simplified here for single file clarity
        }

        function runProtocol() {
            const name = document.getElementById('project-name').value || "Project";
            const c1 = document.getElementById('check-1').checked;
            const c2 = document.getElementById('check-2').checked;
            const c3 = document.getElementById('check-3').checked;
            const resultDiv = document.getElementById('protocol-result');

            if (c1 && c2 && c3) {
                // Success
                resultDiv.innerHTML = `
                    <div class="text-green-400 text-6xl mb-2">‚úì</div>
                    <h3 class="text-2xl font-bold text-white">APPROVED</h3>
                    <p class="text-green-200 mt-2">"${name}" is a sovereign asset.</p>
                    <p class="text-slate-400 text-sm mt-1">Deploy to Engine B.</p>
                `;
            } else {
                // Fail
                resultDiv.innerHTML = `
                    <div class="text-red-500 text-6xl mb-2">‚ö†</div>
                    <h3 class="text-2xl font-bold text-white">DESIGN FLAW</h3>
                    <p class="text-red-200 mt-2">"${name}" creates obligation.</p>
                    <p class="text-slate-400 text-sm mt-1">Restructure or Abandon.</p>
                `;
            }
        }

        // --- CHART.JS HELPER: LABEL WRAPPING ---
        function formatLabel(str, maxwidth) {
            const sections = [];
            const words = str.split(" ");
            let temp = "";

            words.forEach(function(item, index) {
                if (temp.length > 0) {
                    const concat = temp + ' ' + item;
                    if (concat.length > maxwidth) {
                        sections.push(temp);
                        temp = "";
                    } else {
                        if (index === (words.length - 1)) {
                            sections.push(concat);
                            return;
                        } else {
                            temp = concat;
                            return;
                        }
                    }
                }
                if (index === (words.length - 1)) {
                    sections.push(item);
                    return;
                }
                if (item.length < maxwidth) {
                    temp = item;
                } else {
                    sections.push(item);
                }
            });
            return sections;
        }

        // --- CHART.JS CONFIGURATIONS ---

        // 1. Digital Vault Bar Chart
        const ctxVault = document.getElementById('vaultChart').getContext('2d');
        new Chart(ctxVault, {
            type: 'bar',
            data: {
                labels: [
                    formatLabel("Master Identity Access", 15),
                    formatLabel("Financial Accounts", 15),
                    formatLabel("Device Access Pins", 15),
                    formatLabel("Critical Documents", 15),
                    formatLabel("Business Domains", 15),
                    formatLabel("Personal Legacy", 15)
                ],
                datasets: [{
                    label: 'Completion %',
                    data: [90, 85, 100, 40, 60, 15],
                    backgroundColor: [
                        '#4F46E5', '#4F46E5', '#4F46E5', // High completion (Indigo)
                        '#F97316', '#F97316', // Medium (Orange)
                        '#EF4444'  // Low (Red)
                    ],
                    borderRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                let label = tooltipItems[0].label;
                                if (Array.isArray(label)) return label.join(' '); // Fix Multiline Tooltip
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: { beginAtZero: true, max: 100, grid: { display: false } },
                    x: { grid: { display: false } }
                }
            }
        });

        // 2. Scatter Plot (Asset Matrix)
        const ctxScatter = document.getElementById('scatterChart').getContext('2d');
        new Chart(ctxScatter, {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Current Assets',
                    data: [
                        { x: 20, y: 90, name: "Digital Vault PDF" }, // Low Load, High ROI (Ideal)
                        { x: 80, y: 30, name: "Consulting Calls" }, // High Load, Low ROI (Trap)
                        { x: 40, y: 60, name: "Course Sales" },
                        { x: 90, y: 80, name: "Live Workshops" },
                        { x: 10, y: 10, name: "Research Notes" }
                    ],
                    backgroundColor: function(context) {
                        const val = context.raw;
                        if (!val) return '#94a3b8';
                        if (val.x > 60) return '#EF4444'; // High Mental Load = Red
                        if (val.y > 70) return '#0EA5E9'; // High ROI = Blue
                        return '#F97316';
                    },
                    pointRadius: 8,
                    pointHoverRadius: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.raw.name + ` (Load: ${context.raw.x}%, ROI: ${context.raw.y}%)`;
                            }
                        }
                    }
                },
                scales: {
                    x: { 
                        title: { display: true, text: 'Mental Load (Effort)' },
                        min: 0, max: 100 
                    },
                    y: { 
                        title: { display: true, text: 'ROI (Revenue/Impact)' },
                        min: 0, max: 100 
                    }
                }
            }
        });

        // 3. Radar Chart (System Health)
        const ctxRadar = document.getElementById('radarChart').getContext('2d');
        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: [
                    formatLabel("Vision Control", 12),
                    formatLabel("Automation Level", 12),
                    formatLabel("Financial Runway", 12),
                    formatLabel("Identity Privacy", 12),
                    formatLabel("Mental Peace", 12)
                ],
                datasets: [{
                    label: 'Current Status',
                    data: [90, 45, 70, 85, 60],
                    fill: true,
                    backgroundColor: 'rgba(79, 70, 229, 0.2)', // Indigo transparent
                    borderColor: '#4F46E5',
                    pointBackgroundColor: '#4F46E5',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#4F46E5'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { color: '#e2e8f0' },
                        grid: { color: '#e2e8f0' },
                        pointLabels: {
                            font: { size: 12, weight: 'bold' },
                            color: '#475569'
                        },
                        ticks: { display: false, max: 100 }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                let label = tooltipItems[0].label;
                                if (Array.isArray(label)) return label.join(' ');
                                return label;
                            }
                        }
                    }
                }
            }
        });

    </script>
</body>
</html>
